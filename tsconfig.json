{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "rootDirs": ["."],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@theme/*": [".vitepress/theme/*"]
    }
  },
  "include": ["env.d.ts", "src/**/*", ".vitepress/**/*", "scripts"]
}
